<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Todos</title>
</head>
<body>
    <h1>Stuff I need to do.</h1>
    <form action="/todos" method="post">
        <input type="text" name="description">
        <button type="submit">추가</button>
    </form>
    <ul>
    {{#todos}}
        <li>
            <form action="/todos/{{_id}}/completed" method="post">
                {{description}} - {{done}} <button type="submit">완료</button>
            </form>
        </li>
    {{/todos}}
    </ul>

    <h1>Done</h1>
    <ul>
        {{#doneTodos}}
        <li>
            <form action="/todos/{{_id}}/completed" method="post">
                {{description}} - {{done}} <button type="submit">웁스!</button>
            </form>
        </li>
        {{/doneTodos}}
    </ul>
</body>
</html>